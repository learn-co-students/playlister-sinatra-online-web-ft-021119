<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1><%=@song.name%></h1>

<a href="/artists/<%=@song.artist.slug%>"<h3><%=@song.artist.name%></h3></a></br>
<%@song.genres.each do |genre|%>
  <a href="/genres/<%=genre.slug%>"<h3><%=genre.name%></h3></a>
<%end%>

<form action="/songs/<%=@song.slug%>" method="post">
   <input type="hidden" id="hidden" name="_method" value="delete">
   <input type="submit" id="delete" value="Delete Song">
</form>

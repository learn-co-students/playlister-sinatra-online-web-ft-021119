<h1>Create A New Song</h1>

<form action="/songs" method="POST">
  <label for="Name">Name: </label>
  <input type="text" id="Name" name="song[name]">
  <br>

  <label for="Artist Name">Artist Name: </label>
  <input type="text" id="Artist Name" name="artist">
  <br>

  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"> <%= genre.name %> </input>
    <br>
  <% end %>
  <br>

  <input type="submit" id="submit" value="Create Song">
</form>

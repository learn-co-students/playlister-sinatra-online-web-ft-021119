<form  action="/songs" method="post">
  <h2>Fill out this form to create a new song</h2>

  <label for="Name">Name</label>
  <input type="text" name="song[name]" id="Name">

  <h2> Create an artist for this song</h2>
  <h3>Artists</h3>



  <label for="artist">Artist Name: </label>
  <input type="text" name="Artist Name">

  <br>
  <h2>Choose a genre for this song</h2>
  <h3>Genres</h3>

  <% sorted_genres = Genre.all.sort_by{|genre| genre.name.downcase}%>
  <% sorted_genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
    <label for="Genre name"><%= genre.name %></label>
    <br>
  <% end %>

  <!-- <label for="genre">Genre Name: </label>
  <input type="text" name="genres[name]" id="Genre Name"> -->

  <br>
  <br>
  <input type="submit" id="Create">

</form>
